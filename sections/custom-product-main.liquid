<style>
  {% if section.settings.mobile_navigation == false %}
  @media (max-width: 767px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none !important;
    }
  }
  {% endif %}

  {% if section.settings.tablet_navigation == false %}
  @media (min-width: 768px) and (max-width: 1199px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none !important;
    }
  }
  {% endif %}

  {% if section.settings.desktop_navigation == false %}
  @media (min-width: 1200px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none !important;
