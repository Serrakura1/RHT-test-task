<script>
  document.addEventListener("DOMContentLoaded", function () {
    var swipers = {};

    // Slider main
    var thumbMain = new Swiper('.thumbProductGallery-main', {
      slidesPerView: 3,
      spaceBetween: 10,
      watchSlidesProgress: true,
    });
    var mainSwiper = new Swiper('.mainProductGallery-main', {
      pagination: {
        el: '.mainProductGallery-main .swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      thumbs: { swiper: thumbMain },
      breakpoints: {
        0: {
          slidesPerView: {{ section.settings.mobile_gallery_qty_slides }},
          pagination: { enabled: {{ section.settings.mobile_pagination | json }} },
          spaceBetween: {{ section.settings.mobile_slides_gap }},
        },
        768: {
          slidesPerView: {{ section.settings.tablet_gallery_qty_slides }},
          pagination: { enabled: {{ section.settings.tablet_pagination | json }} },
          spaceBetween: {{ section.settings.tablet_slides_gap }},
        },
        1200: {
          slidesPerView: {{ section.settings.desk_gallery_qty_slides }},
          pagination: { enabled: {{ section.settings.desktop_pagination | json }} },
          spaceBetween: {{ section.settings.desktop_slides_gap }},
        },
      },
    });
    swipers["{{ main_handle }}"] = { main: mainSwiper, thumb: thumbMain };

    // Variants* sliders
    {% for variant in product.variants %}
      var thumb{{ forloop.index }} = new Swiper('.thumbProductGallery-{{ forloop.index }}', {
        slidesPerView: 3,
        spaceBetween: 10,
        watchSlidesProgress: true,
      });
      var main{{ forloop.index }} = new Swiper('.mainProductGallery-{{ forloop.index }}', {
        spaceBetween: 10,
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
        pagination: {
          el: '.mainProductGallery-{{ forloop.index }} .swiper-pagination',
          clickable: true,
        },
        thumbs: { swiper: thumb{{ forloop.index }} },
        breakpoints: {
          0: {
            slidesPerView: {{ section.settings.mobile_gallery_qty_slides }},
            pagination: { enabled: {{ section.settings.mobile_pagination | json }} },
            spaceBetween: {{ section.settings.mobile_slides_gap }},
          },
          768: {
            slidesPerView: {{ section.settings.tablet_gallery_qty_slides }},
            pagination: { enabled: {{ section.settings.tablet_pagination | json }} },
            spaceBetween: {{ section.settings.tablet_slides_gap }},
          },
          1200: {
            slidesPerView: {{ section.settings.desk_gallery_qty_slides }},
            pagination: { enabled: {{ section.settings.desktop_pagination | json }} },
            spaceBetween: {{ section.settings.desktop_slides_gap }},
          },
        },
      });
      swipers["{{ variant.id }}"] = {
        main: main{{ forloop.index }},
        thumb: thumb{{ forloop.index }},
      };
    {% endfor %}
  });
</script>

